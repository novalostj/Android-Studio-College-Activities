<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    tools:context=".Play">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/b_play_rock"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:fontFamily="@font/pressstartp"
            android:text="rock"
            android:textSize="10dp" />

        <Button
            android:id="@+id/b_play_paper"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:fontFamily="@font/pressstartp"
            android:text="paper"
            android:textSize="10dp" />

        <Button
            android:id="@+id/b_play_scissors"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:fontFamily="@font/pressstartp"
            android:text="scissors"
            android:textSize="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_enemy"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/bosscarl_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_enemyHealth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_enemyName" />

    <TextView
        android:id="@+id/t_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="COMPARE RESULT"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/t_playerHealth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_enemyHealth" />

    <TextView
        android:id="@+id/t_playerHealth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/t_enemyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_enemy" />
</androidx.constraintlayout.widget.ConstraintLayout>